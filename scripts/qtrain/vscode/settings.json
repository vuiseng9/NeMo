{
    "workbench.colorTheme": "Visual Studio 2017 Light - C++",
    "terminal.integrated.env.linux": {
        // "PIP_BREAK_SYSTEM_PACKAGES": "1", // to avoid pip installing packages that break system packages
        "WS_ROOT": "${workspaceFolder}",         // wr bash function to cd into workspace root
        "WS_ACTIVE_DIR": "/root/work/run/dev-perf-sft",  // ad  bash function to cd into active dir
        "WS_ACTIVE_DIR2": "/opt/NeMo/scripts/performance/llm", // ad2 bash function to cd into active dir2
        "WS_ACTIVE_DIR3": "/opt/NeMo/nemo/collections/llm/recipes", // ad3 bash function to cd into active dir3
        "NEMORUN_HOME": "/root/work/run/dev-perf-sft",
        "NEMO_HOME": "/root/work/nemo",
    },
    // pytest configuration
    "python.testing.cwd": "${workspaceFolder}/path/to/test_folder",
    // "python.testing.pytestArgs": [] // use this to filter test files
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.analysis.extraPaths": [
        "/opt/NeMo",
    ], // add extra paths for pylance, useful for scripts outside of site-packages
}
